<link rel="stylesheet" href="~/css/Genera.css" />

<div class="contenido">
    <div class="cont">
        @{
            ViewData["Title"] = "Registrar nuevo alumno";
        }

        <link rel="stylesheet" href="~/css/RegistroAlumno.css" />

        <div class="registro-container">
            <h1>Registrar nuevo alumno</h1>

            <form method="post" class="registro-form">
                <div class="grid-form">
                    <div class="form-group">
                        <label>No. Control</label>
                        <input type="text" name="NumControl" />
                    </div>
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" name="Nombre" />
                    </div>
                    <div class="form-group">
                        <label>Apellido paterno</label>
                        <input type="text" name="ApellidoPaterno" />
                    </div>
                    <div class="form-group">
                        <label>Apellido materno</label>
                        <input type="text" name="ApellidoMaterno" />
                    </div>
                    <div class="form-group">
                        <label>Género</label>
                        <select name="Genero">
                            <option>Masculino</option>
                            <option>Femenino</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Fecha de nacimiento</label>
                        <input type="date" name="FechaNacimiento" />
                    </div>
                    <div class="form-group">
                        <label>Carrera</label>
                        <input type="text" name="Carrera" />
                    </div>
                    <div class="form-group">
                        <label>Semestre</label>
                        <input type="number" name="Semestre" />
                    </div>
                    <div class="form-group">
                        <label>Estatus</label>
                        <input type="text" name="Estatus" />
                    </div>
                    <div class="form-group">
                        <label>Código postal</label>
                        <input type="text" name="CodigoPostal" />
                    </div>
                    <div class="form-group">
                        <label>Colonia</label>
                        <input type="text" name="Colonia" />
                    </div>
                    <div class="form-group">
                        <label>Calle</label>
                        <input type="text" name="Calle" />
                    </div>
                    <div class="form-group">
                        <label>No. Exterior</label>
                        <input type="text" name="NoExterior" />
                    </div>
                    <div class="form-group">
                        <label>No. Interior</label>
                        <input type="text" name="NoInterior" />
                    </div>
                </div>

                <div class="boton-guardar">
                    <button type="submit">Guardar</button>
                </div>
            </form>
        </div>


    </div>
</div>
